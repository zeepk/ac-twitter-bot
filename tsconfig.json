{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "noImplicitAny": false,
        "isolatedModules": false,
        "resolveJsonModule": true,
        "outDir": "."
    },
    "include": ["src", "index.ts"],
    "references": [
        {
            "path": "./tsconfig.build.json"
        }
    ],
    "exclude": ["node_modules"]
}
